{
  "name": "posthtml-nonce",
  "version": "0.2.0",
  "description": "A posthtml plugin for add nanoid to style & script links",
  "license": "MIT",
  "repository": "gitscrum/posthtml-nonce",
  "homepage": "gitscrum/posthtml-nonce/#readme",
  "bugs": "gitscrum/posthtml-nonce/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "nyc ava"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "nanoid",
    "script",
    "links",
    "style",
    "csp",
    "nonce"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-angular": "^7.5.0",
    "ava": "*",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-minify": "^0.5.0",
    "clinton": "^0.14.0",
    "conventional-changelog-cli": "^2.0.12",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-plugin-ava": "^5.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-unicorn": "^7.1.0",
    "husky": "^1.3.1",
    "is-promise": "^2.1.0",
    "lint-staged": "^8.1.5",
    "nanoid": "^2.0.1",
    "nyc": "^13.3.0",
    "path-exists": "^3.0.0",
    "posthtml": "^0.11.3",
    "posthtml-parser": "^0.4.1",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "clinton && lint-staged",
      "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
    }
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "*.md": "eslint --rule indent: [error, 4]"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "ava",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:unicorn/recommended",
      "plugin:ava/recommended"
    ],
    "rules": {
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": "off",
      "xo": "off"
    }
  }
}
