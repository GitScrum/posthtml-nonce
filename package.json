{
  "name": "posthtml-nonce",
  "version": "0.2.0",
  "description": "A posthtml plugin for add nanoid to style & script links",
  "license": "MIT",
  "repository": "gitscrum/posthtml-nonce",
  "homepage": "gitscrum/posthtml-nonce/#readme",
  "bugs": "gitscrum/posthtml-nonce/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "nyc ava"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "nanoid",
    "script",
    "links",
    "style",
    "csp",
    "nonce"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "ava": "*",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-env": "^1.4.0",
    "babel-preset-minify": "^0.3.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.16",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-xo": "^0.20.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-unicorn": "^4.0.2",
    "husky": "^0.14.3",
    "is-promise": "^2.1.0",
    "lint-staged": "^7.0.0",
    "nanoid": "^1.0.2",
    "nyc": "^11.6.0",
    "path-exists": "^3.0.0",
    "posthtml": "^0.11.3",
    "posthtml-parser": "^0.4.1",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "*.md": "eslint --rule indent: [error, 4]"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "ava",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:unicorn/recommended",
      "plugin:ava/recommended"
    ],
    "rules": {
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
